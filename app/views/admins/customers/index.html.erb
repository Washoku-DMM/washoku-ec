<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<div class="body title">
<h2>会員一覧</h2>
</div>
<div class="body">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>会員一覧</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>