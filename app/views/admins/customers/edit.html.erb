
<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h2>



<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
    </thead>
    <tbody>
      <%= form_with model: @customer, url: admins_customer_path do |f| %>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :family_name %>
            <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :family_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス
            <label><%= f.radio_button :is_deleted, "true" %>有効</label>
            <label><%= f.radio_button :is_deleted, "false" %>無効</label></td>
            <td>                 </td>
        </tr>
        <tr><td><%= f.submit "変更を保存する" %></td>
          <td>                        </td></tr>

      <% end %>
    </tbody>
</table>