<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>商品詳細</h2>

	<%= attachment_image_tag @product, :image, :fill,300,300,format:'jpeg'  %>
	<h4>商品名</h4>
		<%= @product.name %>
	<h4>商品説明</h4>
		<%= @product.product_introduction %>
	<h4>ジャンル</h4>
		<%= @genre.name %>
	<h4>税込価格（税抜価格）</h4>
		<%= @product.price %>(<%= @product.price :1.1 %>)円
	<h4>販売ステータス</h4>
		<%= @product.is_active %>

	<table>
	    <thead>
		    <tr>
		      <th>商品名</th>
		      <th>購入者</th>
		      <th>注文個数</th>
		      <th>注文ステータス</th>
	        </tr>
	  　</thead>
	    <tbody>
	      <!-- ↓複数の変数を使うのでzipメゾットを使うかも -->
	      <%# @orders.each do |order| %>
	       　<tr>
	         　<td><%= link_to order.create_at ,admin_order_path(order.id)%></td>
	         　<td><%= customer.name %></td>
	         　<td><%= order_product.count %></td>
	         　<td><%= order_product.product_status %></td>
	       　</tr>
	      <% end %>
	    </tbody>
 	</table>
