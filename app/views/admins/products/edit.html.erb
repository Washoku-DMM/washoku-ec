<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<h2>商品編集</h2>

<%= form_with model: @product do |f| %>

<%= f.attachment_field :image %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :product_introduction %>

<h4>ジャンル</h4>
<%= f.select :genre_id, Genre.all.map{ |genre| [genre.name, genre.id]} %>

<h4>税抜価格</h4>
<%= f.text_field :price %>円

<h4>販売ステータス</h4>
<%= f.select :product_id, Product.all.map{ |product| [product.is_active, product.id]} %>


<%= f.submit "変更を保存" %>

<% end %>