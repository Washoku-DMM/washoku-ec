<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<div class="body title">
  <h2>商品新規登録</h2>
</div>

<div class="body form-group">
 <ul class="nav navbar-nav navbar-left" >

  <%= form_with model: @product, url: admins_products_path do |f| %>
  <%= f.attachment_field :image %>
</ul>
<ul class="nav navbar-nav navbar-left" >
  <table>
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name %></td>
        <td></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :product_introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id, Genre.all.map{ |genre| [genre.name, genre.id]} %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td><%= f.select :is_active, [["販売中", "true"], ["売切れ", "false"]] %></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録", class: "btn-sm btn-primary" %></td>
      </tr>
    </ul>
    <% end %>
  </div>