<h2>注文履歴一覧</h2>

<table>
    <thead>
	    <tr>
	      <th>購入日時</th>
	      <th>購入者</th>
	      <th>注文個数</th>
	      <th>注文ステータス</th>
        </tr>
  　</thead>
    <tbody>
      <!-- ↓複数の変数を使うのでzipメゾットを使うかも -->
      <% @orders.each do |order| %>
       　<tr>
         　<td><%= link_to order.create_at ,admin_order_path(order.id)%></td>
         　<td><%= customer.name %></td>
         　<td><%= order_product.count %></td>
         　<td><%= order_product.product_status %></td>
       　</tr>
      <% end %>
    </tbody>
  </table>

