<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<div class="body title">
  <h2>注文履歴一覧</h2>
</div>

<div class="body">
<table>
    <thead>
	    <tr>
	      <th>購入日時</th>
	      <th>購入者</th>
	      <th>注文個数</th>
	      <th>注文ステータス</th>
        </tr>
  </thead>
    <tbody>
      <!-- ↓複数の変数を使うのでzipメゾットを使うかも -->
      <% @orders.each do |order| %>
       <tr>
         <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admins_order_path(order)%></td>
         <td><%= order.customer.name %></td>
         <td><%= order_product.count %></td>
         <td><%= order_product.product_status %></td>
         <td><%= link_to order.created_at, admins_order_path(order)%></td>
         <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
         <td><%= order.order_products.count %></td>
         <td><%= order.order_status %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <!-- ページング機能で実装予定 -->