
<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<div class="body title">ジャンル一覧・追加</div>
<div class="body">
  <%= form_with model: @genre, url: admins_genres_path do |f| %>
  <p>ジャンル
    <%= f.text_field :name %>
    <label><%= f.radio_button :is_active, "true" %>有効</label>
    <label><%= f.radio_button :is_active, "false" %>無効</label>
    <%= f.submit "追加" %></p>
    <% end %>


<table class="table">
      <thead>
      <tr class="active">
          <th>ジャンル</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <% if genre.is_active == true %>
          <td>有効</td>
          <% else %>
          <td>無効</td>
          <% end %>
          <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>