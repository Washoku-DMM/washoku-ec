
<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<div class="body title">ジャンル一覧・追加</div>
  <div class="body">
    <%= form_with model: @genre, url: admins_genres_path do |f| %>
    <p>ジャンル
      <%= f.text_field :name %>
      <label><%= f.radio_button :is_active, "true" %>有効</label>
      <label><%= f.radio_button :is_active, "false" %>無効</label>
      <%= f.submit "追加" %></p>
    <% end %>


    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= genre.is_active %></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>