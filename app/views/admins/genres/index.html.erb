<!-- header -->

<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre do |f| %>
<p>ジャンル
  <%= f.text_field :name %>
  <%#= form.radio_button %>有効無効
  <%= f.submit "追加" %></p>
<% end %>


<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集する", edit_admin_genre %></td>
    </tr>
    <% end %>
  </tbody>
</table>