<!-- header -->

<h2>ジャンル一覧・追加</h2>

<!-- <%# render 検索窓の部分テンプレート %> -->

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集する", edit_admin_genre %></td>
    </tr>
    <% end %>
  </tbody>
</table>