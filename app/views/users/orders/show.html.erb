<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>注文履歴詳細</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at %></td>
      <td><%= @order.postal_code %><br>
          <%= @order.address %>
          <%= @order.name %></td>
      <td><%= @order.payment_methods %></td>
      <td><%= @order.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文内容</th>
    </tr>
  </thead>
  <tbody>
    <%# @orders.each do |order| オーダー全部をどうやって入れるか？order_product? %>
    <tr>
      <td><%#= orderのproduct.name オーダーの商品を入れる %></td>
      <td><%#= orderのproduct.price オーダーの商品を入れる %></td>
      <td><%#= orderのproduct.count オーダーの商品を入れる %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>請求情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.billing_amount %></td>
      <td><%= @order.shipping_fee %></td>
      <td><%#= @orderの合計金額 %></td>
    </tr>
    <% end %>
  </tbody>
</table>