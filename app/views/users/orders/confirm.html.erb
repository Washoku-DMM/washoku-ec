<h3>注文情報確認</h3>

<%= form_for @carts do |f| %>
 <table>

 	<thead>
 		<tr>
 			<th>商品名</th>
 			<th>単価（税込）</th>
 			<th>数量</th>
 			<th>小計</th>
 		</tr>
 	</thead>

 	<tbody>
 		<tr>
 			<td><%= @carts.product.image %><%= @cart.product.name %></td>
 			<td><%= ((@cart.product.price)*1.1) %></td>
 			<td><%= @cart.count %></td>
 			<td><%= ((@cart.product.price)*1.1)*(@cart.count) %></td>
		</tr>
 	</tbody>

 </table>

<table>
		<tr>
			<th>送料</th>
			<td><%= shipping_fee %></td>
		</tr>
		<tr>
			<th>合計金額</th>
			<td></td>
		</tr>
		<tr>
			<th>請求金額</th>
			<td><%= billing_amount %></td>
		</tr>
</table>

  <div class="actions">
    <%= f.submit '投稿画面に戻る', name: 'back' %>
  </div>
  <div class="actions">
    <%= f.submit '投稿する' %>
  </div>
<% end %>