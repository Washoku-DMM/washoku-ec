<!-- header -->
<%= render ‘admins/header’ %>	
<!-- header -->

<h2>注文履歴一覧</h2>	
<table class=“table table-hover table-inverse”>	
  <thead>	
    <tr>	
      <th>注文日</th>	
      <th>配送先</th>	
      <th>注文商品</th>	
      <th>支払金額</th>	
      <th>ステータス</th>	
      <th>注文詳細</th>	
    </tr>	
  </thead>	
  <tbody>	
    <% @orders.each do |order| %>	
    <tr>	
      <td><%= order.created_at %></td>	
      <td><%= order.postal_code %><br>	
          <%= order.address %>	
          <%= oeder.name %></td>	
      <td><%#= orderのproduct.name オーダーの商品を入れる %></td>	
      <td><%= order.shipping_fee %></td>	
      <td><%= order.is_active %></td>	
      <td><%= link_to “表示する“, order_path(order) %></td>	
    </tr>	
    <% end %>	
  </tbody>	
</table>

