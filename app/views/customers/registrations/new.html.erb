<!-- 部分テンプレート使う -->


<h2>新規会員登録</h2>


      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


        <P>名前</P>
        <div class="field">
          <%= f.label "(姓)"  %>
          <%= f.text_field :family_name, autofocus: true, class: "name" %>
        </div>

        <div class="field">
          <%= f.label "(名)"  %>
          <%= f.text_field :first_name, autofocus: true, class: "name" %>
        </div>

        <P>フリガナ</P>
        <div class="field">
          <%= f.label "(セイ)"  %>
          <%= f.text_field :family_name_kana, autofocus: true, class: "name" %>
        </div>

        <div class="field">
          <%= f.label "(メイ)"  %>
          <%= f.text_field :first_name_kana, autofocus: true, class: "name" %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス"  %>
          <%= f.text_field :email, autofocus: true, class: "email" %>
        </div>

        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)"  %>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "住所"  %>
          <%= f.text_area :address, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "電話番号(ハイフンなし)"  %>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "パスワード(６文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
           <%= f.submit "新規登録",class: "btn btn-success" %>
        </div>

      <% end %>

      <div class="row">
            <p class="logintitle">既に登録済みの方</p>
                <p><%= link_to ' こちら　', new_customers_customer_session_path %> からログインしてください。</p>
        </div>
