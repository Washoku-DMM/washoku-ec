<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<h2>マイページ</h2>

	<%= flash[:success] %>
	<%= flash[:danger] %>


<h3>登録情報</h3>

<%= link_to "編集する", edit_customer_path(@customer), class: "btn-sm btn-success edit_customer_#{@customer.id}" %>

<%= link_to "パスワードを変更する", new_customers_customer_password_path, class: "btn-sm btn-success" %>

<table class="table table-hover table-inverse">
		<tr>
			<th>氏名</th>
			<td><%= @customer.family_name %><%= @customer.first_name %></td>
		</tr>
		<tr>
			<th>カナ</th>
			<td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= @customer.address %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @customer.email %></td>
		</tr>
</table>

<h3>配送先</h3>

<%= link_to "一覧を見る", deliveries_path(@customer), class: "btn-sm btn-success deliveries_#{@customer.id}" %>


<h3>注文履歴</h3>

<%= link_to "一覧を見る", orders_path(@customer), class: "btn-sm btn-success orders_#{@customer.id}" %>