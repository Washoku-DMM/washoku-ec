
<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<%= flash[:success] %>
<%= flash[:danger] %>
<%= flash[:info] %>


     <h2>登録情報編集</h2>




<table>
        <%= form_for(@customer) do |f| %>

  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= f.label "(姓)"  %></td>
      <td><%= f.text_field :family_name, autofocus: true, class: "name" %></td>
      <td><%= f.label "(名)" %></td>
      <td><%= f.text_field :first_name, autofocus: true, class: "name" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label "(セイ)" %></td>
      <td><%= f.text_field :family_name_kana, autofocus: true, class: "name" %></td>
      <td><%= f.label "(メイ)"  %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true, class: "name" %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.label "メールアドレス"  %></td>
      <td><%= f.text_field :email, autofocus: true, class: "email" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.label "郵便番号(ハイフンなし)"  %></td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.label "住所"  %></td>
      <td><%= f.text_area :address, autofocus: true %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.label "電話番号(ハイフンなし)"  %></td>
      <td><%= f.text_field :phone_number, autofocus: true %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "編集内容を保存する",class: "btn btn-primary" %></td>
      <td></td>
      <td></td>
      <td><%= link_to "退会する", withdrawl_customer_path, class: "btn-sm btn-danger " %></td>
    </tr>
  </tbody>
   <% end %>
</table>