<div class="container">
  <%= render 'admins/header' %>
  <div class="row">

    <div class="col-md-3">
      <%= render 'products/genres_search' %>
    </div>

    <div class="col-md-offset-1 col-md-8">

        <div class="row col-md-12">
          <h2><%= @genre.name %>一覧</h2>
        </div>
        <% @products.each do |product| %>
          <div class="row col-md-3">
          <%= link_to product_path(product) do %>
          <%= attachment_image_tag product, :image, :fill,30,30,format:'jpeg',fallback: "washoku.jpg", size:'100x100' %> <br>
          <%= product.name %> <br>
          ¥<%= product.price %>
          <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
    <div class="row col-md-offset-6 col-md-6">
      <%= will_paginate @products, previous_label: '&lt 前へ', next_label: '次へ &gt' %>
    </div>
  </div>
</div>



