<div class="container">

  <!-- header -->
  <%= render 'admins/header' %>
  <!-- header -->

  <%= flash[:success] %>
  <%= flash[:danger] %>
  <%= flash[:info] %>

    <div class="row">
      <div class="col-md-12">

          <h2>配送先登録/一覧</h2>

          <%= form_for(@delivery) do |f| %>

            <table class="table">
              <tr>
                <th class="active">郵便番号(ハイフンなし)</th>
                <td><%= f.text_field :postal_code, autofocus: true %>
                </td>
              </tr>

              <tr>
                <th class="active">住所</th>
                <td>
                  <%= f.text_area :address, autofocus: true %>
                </td>
              </tr>

              <tr>
                <th class="active">宛名</th>
                <td>
                  <%= f.text_field :name, autofocus: true, class: "name" %>
                </td>
              </tr>

              <%= f.hidden_field :customer_id, value: @customer.id  %>
            </table>
      </div>

      <div class="col-md-offset-5 col-md-6">
        <%= f.submit "登録する",class: "btn btn-success" %>
      </div>
    <% end %>
    </div>

  <br><br>

    <div class="row">
      <div class="col-md-12">
            <table class="table">
              <thead>
               <tr class="active">
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @deliveries.each do |delivery| %>
              <tr>
                <td><%= delivery.postal_code %></td>
                <td><%= delivery.address %></td>
                <td><%= delivery.name %></td>
                <td>
                 <%= link_to "編集する", edit_delivery_path(delivery), class: "btn-sm btn-primary edit_delivery_#{delivery.id}",  data: {"turbolinks" => false} %>

                 <%= link_to "削除する", delivery_path(delivery), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_delivery_#{delivery.id}" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
</div>


