
<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>配送先登録/一覧</h2>


<%= flash[:success] %>
<%= flash[:danger] %>
<%= flash[:info] %>


<table>
  <%= form_for(@delivery) do |f| %>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.label "郵便番号（ハイフンなし）"  %></td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label "住所"  %></td>
      <td><%= f.text_area :address, autofocus: true %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label "宛名"  %></td>
      <td><%= f.text_field :name, autofocus: true, class: "name" %></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><%= f.hidden_field :customer_id, value: @customer.id  %>
        <%= f.submit "登録する",class: "btn btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>


  <table class="table">
    <thead>
     <tr class="active">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
    <tr>
      <td><%= delivery.postal_code %></td>
      <td><%= delivery.address %></td>
      <td><%= delivery.name %></td>
      <td>
       <%= link_to "編集する", edit_delivery_path(delivery), class: "btn-sm btn-primary edit_delivery_#{delivery.id}" %>

       <%= link_to "削除する", delivery_path(delivery), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_delivery_#{delivery.id}" %>
     </td>
   </tr>
   <% end %>
 </tbody>
</table>

