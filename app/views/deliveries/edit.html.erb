<div class="container">

  <!-- header -->
  <%= render 'admins/header' %>
  <!-- header -->

  <%= flash[:success] %>
  <%= flash[:danger] %>
  <%= flash[:info] %>
  <div class="row">
    <div class="col-md-12">


          <h2>配送先編集</h2>

          <%= flash[:success] %>
          <%= flash[:danger] %>
          <%= flash[:info] %>

          <%= form_for(@delivery) do |f| %>

              <table class="table">
                <tr>
                  <th class="active">郵便番号(ハイフンなし)</th>
                  <td><%= f.text_field :postal_code, autofocus: true %>
                  </td>
                </tr>

                <tr>
                  <th class="active">住所</th>
                  <td>
                    <%= f.text_area :address, autofocus: true %>
                  </td>
                </tr>

                <tr>
                  <th class="active">宛名</th>
                  <td>
                    <%= f.text_field :name, autofocus: true, class: "name" %>
                  </td>
                </tr>
              </table>
    </div>
              <div class="col-md-offset-5 col-md-6">
                <%= f.submit "登録する",class: "btn btn-success" %>
              </div>
          <% end %>
  </div>
</div>

