<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>配送先編集</h2>

<%= flash[:success] %>
<%= flash[:danger] %>
<%= flash[:info] %>

<table>
  <%= form_for(@delivery) do |f| %>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.label "郵便番号（ハイフンなし）"  %></td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label "住所"  %></td>
      <td><%= f.text_area :address, autofocus: true %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label "宛名"  %></td>
      <td><%= f.text_field :name, autofocus: true, class: "name" %></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td><%= f.submit "編集する",class: "btn btn-primary" %></td>
    </tr>
  </tbody>
  <% end %>
</table>