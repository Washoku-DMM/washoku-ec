<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>配送先編集</h2>

<%= flash[:success] %>
<%= flash[:danger] %>
<%= flash[:info] %>

<%= form_for(@delivery) do |f| %>

    <div class="field">
      <%= f.label "郵便番号（ハイフンなし）"  %>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label "住所"  %>
      <%= f.text_area :address, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label "宛名"  %>
      <%= f.text_field :name, autofocus: true, class: "name" %>
    </div>

    <div class="actions">
			 <%= f.submit "編集する",class: "btn btn-success" %>
	</div>

<% end %>
