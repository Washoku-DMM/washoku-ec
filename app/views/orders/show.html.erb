<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>注文履歴詳細</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.postal_code %><br>
          <%= @order.address %>
          <%= @order.name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td>
        <% if @order.payment_methods == true %>
          <%= "クレジットカード" %>
        <% else %>
          <%= "銀行振込" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td>
            <% if @order.order_status = 0 %>
              <%= "入金待ち" %>
            <% elsif @order.order_status = 1 %>
              <%= "入金確認" %>
            <% elsif @order.order_status = 2 %>
              <%= "製作中" %>
            <% elsif @order.order_status = 3 %>
              <%= "発送準備中" %>
            <% else @order.order_status = 4 %>
              <%= "発送済み" %>
            <% end %>
      </td>
    </tr>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文内容</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品</td>
      <td>単価（税込）</td>
      <td>個数</td>
      <td>小計</td>
    </tr>
    <% sum = 0 %>
    <% @order.order_products.each do |order_product| %>
    <tr>
      <td><%= order_product.product.name %></td>
      <td><%= price_include_tax(order_product.price) %>
      </td>
      <td><%= order_product.count %></td>
      <td>
        <%= sub_total = price_include_tax(order_product.price).to_i * order_product.count %>円
        <% sum += sub_total %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>請求情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= sum %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_fee %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td>
        <%= sum + @order.shipping_fee.to_i %>円
      </td>
    </tr>
  </tbody>
</table>
