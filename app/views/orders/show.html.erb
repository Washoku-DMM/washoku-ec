<!-- header -->
<%= render 'admins/header' %>
<!-- header -->
<h2>注文履歴詳細</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.postal_code %><br>
          <%= @order.address %>
          <%= @order.name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_methods %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>注文内容</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品</td>
      <td>単価（税込）</td>
      <td>個数</td>
      <td>小計</td>
    </tr>
    <%# @orders.each do |order| オーダー全部をどうやって入れるか？order_product? %>
    <tr>
      <td><%#= orderのproduct.name オーダーの商品を入れる %></td>
      <td><%#= orderのproduct.price オーダーの商品を入れる %></td>
      <td></td>
      <td><%#= orderのproduct.count オーダーの商品を入れる %></td>
    </tr>
    <%# end %>
  </tbody>
</table>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>請求情報</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= @order.billing_amount %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_fee %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%#= @orderの合計金額 %></td>
    </tr>
    <% end %>
  </tbody>
</table>