<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

<h3>注文情報確認</h3>

<%= form_with(model: @order, local: true) do |f| %>

 <table>

 	<thead>
 		<tr>
 			<th>商品名</th>
 			<th>単価（税込）</th>
 			<th>数量</th>
 			<th>小計</th>
 		</tr>
 	</thead>

<% sum_all = 0 %>
<% @cart_products.each do |cart_product| %>
 	<tbody>
 			<tr>
 			<td>
 				<%= attachment_image_tag(cart_product.product, :image, :fill, 100, 100, fallback: "washoku.jpg", size: '100x100') %>
 				<%= cart_product.product.image %><%= cart_product.product.name %></td>
 			<td><%= ((cart_product.product.price)*1.1) %></td>
 			<td><%= cart_product.count %></td>
 			<td><%= ((cart_product.product.price)*1.1)*(cart_product.count) %></td>
 			</tr>
 	</tbody>
<% end %>
</table>


<%= form_for @order do |f| %>

<table>

		<tr>
			<th>送料</th>
			<td><%= @order.shipping_fee %></td>
			<!-- ↑全国一律800円なので、default:800？ -->
		</tr>
		<tr>
			<th>合計金額</th>
			<td><% sum.to_i %></td>
		</tr>
		<tr>
			<th>請求金額</th>
			<td>
				<% billling_amount = sum + @order.shipping_fee.to_i %>
          		<%= billling_amount.to_i %>円

			</td>
		</tr>
</table>


<h3>支払方法</h3>
<%= @order.payment_methods %>

<h3>お届け先</h3>
<%= @order.address %>


  <div class="actions">
    <%= f.submit '注文情報入力画面へ戻る', name: 'back' %>
  </div>

  <div class="actions">
    <%= f.submit '購入を確定する' %>
  </div>
<% end %>