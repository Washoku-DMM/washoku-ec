<!-- header -->
<%= render 'admins/header' %>
<!-- header -->

    <h2>注文履歴一覧</h2>

<table class="table">
      <thead>
        <tr class="active">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.postal_code %><br>
              <%= order.address %>
              <%= order.name %></td>
          <td>
            <% order.order_products.each do |order_product| %>
            <%= order_product.product.name %><br>
            <% end %>
          </td>
          <td>
            <%= order.billing_amount.to_s(:delimited) %>
          </td>
          <td>
            <% if order.order_status = 0 %>
              <%= "入金待ち" %>
            <% elsif order.order_status = 1 %>
              <%= "入金確認" %>
            <% elsif order.order_status = 2 %>
              <%= "製作中" %>
            <% elsif order.order_status = 3 %>
              <%= "発送準備中" %>
            <% else order.order_status = 4 %>
              <%= "発送済み" %>
              <% end %>
          </td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

